<%= form_for(@patient) do |f| %>
  <% if @patient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@patient.errors.count, "error") %> prohibited this patient from being saved:</h2>

      <ul>
      <% @patient.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :gender %><br />
    <%= f.select :gender, Patient::VALID_GENDERS  %>
  </div>
  <div class="field">
    <%= f.label :age %><br />
    <%= f.number_field :age %>
  </div>
  <div class="field">
    <%= f.label :id_proof_name %><br />
    <%= f.collection_select :id_proof_id , IdProof.all , :id , :id_proof %>
  </div>
  <div class="field">
    <%= f.label :id_proof_number %><br />
    <%= f.text_field :id_proof_number %>
  </div>
  <div class="field">
    <%= f.label :mobile %><br />
    <%= f.text_field :mobile %>
  </div>
  <div class="field">
    <%= f.label "Father's/Spouse's Name" %><br />
    <%= f.text_field :father_spouse %>
  </div>
  <div class="field">
    <%= f.label :medical_department %><br />
    <%= f.collection_select  :medical_department_ids , MedicalDepartment.all , :id , :medical_department , {} , multiple: true , size: 4 %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_area :address ,rows: 5, cols: 25%>
  </div>
  <div class="field">
    <%= f.label :town %><br />
    <%= f.collection_select  :town_id , Town.all , :id , :town %>
  </div>
  <div class="field">
    <%= f.label :treatment_given %><br />
    <%= f.text_area :treatment ,rows: 5, cols: 25%>
  </div>
  <div class="field">
    <%= f.label :medicines_given %><br />
    <%= f.text_area :medicines ,rows: 5, cols: 25%>
  </div>
  <div class="field">
    <%= f.label :services_provided %><br />
    <%= f.text_area :services ,rows: 5, cols: 25%>
  </div>
  <div class="field">
    <%= f.label :special_instructions %><br />
    <%= f.text_area :special_instructions ,rows: 5, cols: 25%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
